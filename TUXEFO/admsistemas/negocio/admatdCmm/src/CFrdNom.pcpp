int CNomeFeriado::ListId( char* cidNomeFeriado ) 
{
    ULOG_START("CNomeFeriado::ListId()");        
	//Variavel de controle para a quantidade de registros retornada
	int    iCont = 0;
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		char* cAuxidNomeFeriado = cidNomeFeriado; 
		struct
		{
			VARCHAR stidNomeFeriado[21+1];
			VARCHAR stdsFeriado[255+1];
		} stNomeFeriadoRegistro;
		struct
		{
			short iidNomeFeriado;
			short idsFeriado;
		} stNomeFeriadoIndicator;
	EXEC SQL END DECLARE SECTION;

	//Processamento Principal
	try
	{
		//Zera a estrutura da classe
		ZeraNomeFeriado();

		//Ativa as acoes decorrentes de erros ORACLE
		EXEC SQL WHENEVER NOT FOUND DO break;
		EXEC SQL WHENEVER SQLERROR GOTO GotoListId;
		sqlca.sqlcode=0;

		//Declara um cursor para listar os IDs
   		EXEC SQL DECLARE CursorNomeFeriadoId CURSOR FOR 
   		SELECT 	idNomeFeriado,
	            dsFeriado
		FROM calendario.NomeFeriado
		WHERE idNomeFeriado = :cAuxidNomeFeriado;

		//Abre o cursor
		EXEC SQL OPEN CursorNomeFeriadoId;

		//Verifica se nao house erro ORACLE
		if(sqlca.sqlcode)
		{
		    ULOG_END("CNomeFeriado::ListId()");        
			return 0;//Erro
		}
		else
		{
			//Caso inexista registros sair do loop
			EXEC SQL WHENEVER NOT FOUND DO break;
			for(;;)
			{
				//Zera a estrutura de restorno
				memset( &stNomeFeriadoRegistro, 0, sizeof(stNomeFeriadoRegistro) );
				//Pega um registro no CURSOR
				EXEC SQL FETCH CursorNomeFeriadoId INTO :stNomeFeriadoRegistro:stNomeFeriadoIndicator;
				//Adiciona a classe
				Add( 	(char*)stNomeFeriadoRegistro.stidNomeFeriado.arr,
				(char*)stNomeFeriadoRegistro.stdsFeriado.arr );
				//conta quantos existem
				iCont++;
			}
			//Fecha o CURSOR
			EXEC SQL CLOSE CursorNomeFeriadoId;
		}
		ULOG_END("CNomeFeriado::ListId()");        
		//Retorna a quantidade de registros
		return iCont;
	}
	catch(...)
	{
		throw;
	}

GotoListId:
    ULOGE( "ERRO ORACLE:sqlcode = [%d],sqlerrmc = [%.70s]",sqlca.sqlcode,sqlca.sqlerrm.sqlerrmc);
	throw TuxBasicOraException(sqlca.sqlcode);

}

