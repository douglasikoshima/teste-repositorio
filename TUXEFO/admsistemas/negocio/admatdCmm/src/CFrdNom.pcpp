int CNomeFeriado::Insert( 
			char* cdsFeriado,
			char* cidUsuarioAlteracao )
{
    ULOG_START("CNomeFeriado::Insert()");        
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		VARCHAR cAuxidNomeFeriado[255+1];
		char* cAuxdsFeriado = cdsFeriado;
		char* cAuxidUsuarioAlteracao = cidUsuarioAlteracao;
	EXEC SQL END DECLARE SECTION;
	
	//Processamento Principal
	try
	{
		//Zera a estrutura da classe
		ZeraNomeFeriado();
		
		memset( &cAuxidNomeFeriado, 0, sizeof(cAuxidNomeFeriado) ); 
		
		EXEC SQL WHENEVER NOT FOUND CONTINUE;
		EXEC SQL WHENEVER SQLERROR GOTO GotoInsert;
		
		//Pega um id unico e sequencia para a insercao
		EXEC SQL SELECT calendario.NomeFeriadoSQ.NEXTVAL INTO :cAuxidNomeFeriado FROM DUAL;

		//Realiza o insert
		EXEC SQL INSERT INTO calendario.NomeFeriado
		(	idNomeFeriado,
			dsFeriado,
			idUsuarioAlteracao,
			dtUltimaAlteracao) 
		VALUES 
		(	:cAuxidNomeFeriado,
			:cAuxdsFeriado,
			:cAuxidUsuarioAlteracao,
			SYSDATE);
			
        ULOG_END("CNomeFeriado::Insert()");        
		//Verifica se houve ou nao erro ORACLE
		if(sqlca.sqlcode) {
			return 0;//Erro
		}
		else {
			return 1;//Sucesso
		}
	}
	catch(...)
	{
		throw;
	}
	
GotoInsert:
    ULOGE( "ERRO ORACLE:sqlcode = [%d],sqlerrmc = [%.70s]",sqlca.sqlcode,sqlca.sqlerrm.sqlerrmc);
	throw TuxBasicOraException(sqlca.sqlcode);
	
}

int CNomeFeriado::Update( 
			char* cidNomeFeriado,
			char* cdsFeriado,
			char* cidUsuarioAlteracao )
{
    ULOG_START("CNomeFeriado::Update()");        
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		
			char* cAuxidNomeFeriado = cidNomeFeriado;
			char* cAuxdsFeriado = cdsFeriado;
			char* cAuxidUsuarioAlteracao = cidUsuarioAlteracao;
	EXEC SQL END DECLARE SECTION;

	//Processamento Principal
	try
	{
		//Zera a estrutura da classe
		ZeraNomeFeriado();
		
		//Ativa as acoes decorrentes de erros ORACLE
		EXEC SQL WHENEVER NOT FOUND CONTINUE;
		EXEC SQL WHENEVER SQLERROR GOTO GotoUpdate;
		
		//Executa a instrucao de update
		EXEC SQL 
		UPDATE calendario.NomeFeriado
		SET 	dsFeriado = :cAuxdsFeriado,
		idUsuarioAlteracao = :cAuxidUsuarioAlteracao,
		dtUltimaAlteracao = SYSDATE
		WHERE 	idNomeFeriado = :cAuxidNomeFeriado;  
		 
		ULOG_END("CNomeFeriado::Update()");        
		//Verifica se houve ou nao erro ORACLE
		if(sqlca.sqlcode)
			return 0;//Erro
		else
			return sqlca.sqlerrd[2];//Quantidade de linhas afetadas
	}
	catch(...)
	{
		throw;
	}

GotoUpdate:
	throw new TuxBasicOraException(sqlca.sqlcode);
	
}

