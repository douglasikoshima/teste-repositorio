		<default-exception>org.acegisecurity.AuthenticationServiceException</default-exception>
		<exceptions>
<!-- 
List of Active Directory errors:

525 - user not found					   -> org.acegisecurity.userdetails.UsernameNotFoundException
530 - not permitted to logon at this time  -> 
773 - user must reset password			   -> 
52e - invalid credentials 				   -> org.acegisecurity.BadCredentialsException;
532 - password expired  				   -> org.acegisecurity.CredentialsExpiredException;
533 - account disabled 					   -> org.acegisecurity.DisabledException;
701 - account expired 				       -> org.acegisecurity.AccountExpiredException;
775 - account locked                       -> org.acegisecurity.LockedException;
-->			
 			<org>
 				<acegisecurity>
 					<BadCredentialsException>52e</BadCredentialsException>
 					<CredentialsExpiredException>532</CredentialsExpiredException>
 					<DisabledException>533</DisabledException>
 					<AccountExpiredException>701</AccountExpiredException>
 					<LockedException>775</LockedException>
 					<userdetails>
 						<UsernameNotFoundException>525</UsernameNotFoundException>
 					</userdetails>
 				</acegisecurity>
 			</org>
		</exceptions>
	</activeDirectory>
	<javax>
		<naming>
			<NameAlreadyBoundException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.NameAlreadyBoundException</NameAlreadyBoundException>
			<NameNotFoundException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.NameNotFoundException</NameNotFoundException>
			<OperationNotSupportedException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.OperationNotSupportedException</OperationNotSupportedException>
			<AuthenticationException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.AuthenticationException</AuthenticationException>
			<directory>
				<InvalidAttributesException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.InvalidAttributesException</InvalidAttributesException>
				<InvalidAttributeValueException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.InvalidAttributeValueException</InvalidAttributeValueException>
				<NoSuchAttributeException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.NoSuchAttributeException</NoSuchAttributeException>
				<SchemaViolationException>br.com.indrasistemas.framework.foundation.security.ldap.exceptions.SchemaViolationException</SchemaViolationException>
			</directory>
		</naming>
	</javax>
