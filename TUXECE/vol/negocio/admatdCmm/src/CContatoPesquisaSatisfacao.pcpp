int CContatoPesquisaSatisfacao::Find( char* cidContato, char* cidPesquisaSatisfacao )
{
	int iRet = -1;//Se nao encontra nada
	int x;

	for(x=0; x < Quantidade(); x++ )
	{
		if( ( strcmp( Registro(x)->cidContato, cidContato ) == 0 )
		 && ( strcmp( Registro(x)->cidPesquisaSatisfacao, cidPesquisaSatisfacao ) == 0 ) )
		{
			iRet = x;
			break;
		}
	}
	return iRet;
}