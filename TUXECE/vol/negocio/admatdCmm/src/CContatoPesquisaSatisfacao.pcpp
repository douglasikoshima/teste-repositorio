int CContatoPesquisaSatisfacao::Insert( 
								char* cidContato,
								char* cidPesquisaSatisfacao,
								char* cidUsuarioAlteracao
							 )
{
    ULOG_START("CContatoPesquisaSatisfacao::Insert()");
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		char* cAuxidContato = cidContato;
		char* cAuxidUsuarioAlteracao = cidUsuarioAlteracao;
		char* cAuxidPesquisaSatisfacao = cidPesquisaSatisfacao;
		VARCHAR stidContatoPesquisaSatisfacao[21+1];
	EXEC SQL END DECLARE SECTION;
	
	//Processamento Principal
	try
	{
		EXEC SQL WHENEVER NOT FOUND CONTINUE;
		EXEC SQL WHENEVER SQLERROR GOTO GotoInsert;
		memset( &stidContatoPesquisaSatisfacao, 0, sizeof( stidContatoPesquisaSatisfacao ) );

		//Recupera uma sequencia unica
		EXEC SQL
			SELECT
				CONTATOADM.CONTATOPESQUISASATISFACAOSQ.NEXTVAL
			INTO
				:stidContatoPesquisaSatisfacao
			FROM DUAL;
		
		//Realiza o insert
		EXEC SQL 
			INSERT INTO CONTATOADM.CONTATOPESQUISASATISFACAO
			(	IDCONTATOPESQUISASATISFACAO,
				IDCONTATO,
				IDPESQUISASATISFACAO,
				IDUSUARIOALTERACAO,
				DTULTIMAALTERACAO
			)
			VALUES 
			(	stidContatoPesquisaSatisfacao,
				:cAuxidContato,
				:cAuxidPesquisaSatisfacao,
				:cAuxidUsuarioAlteracao,
				SYSDATE
			);
			//Adiciona ao interator
			Add( 	
				(char*)stidContatoPesquisaSatisfacao.arr,
				cAuxidContato, 
				cAuxidPesquisaSatisfacao
			);
        ULOG_END("CContatoPesquisaSatisfacao::Insert()");
		return 0;//Sucesso
	}
	catch(...)
	{
		throw;
	}
	
GotoInsert:
    ULOGE( "ERRO ORACLE:sqlcode = [%d],sqlerrmc = [%.70s]",sqlca.sqlcode,sqlca.sqlerrm.sqlerrmc);
	throw TuxBasicOraException(sqlca.sqlcode);
	
}

