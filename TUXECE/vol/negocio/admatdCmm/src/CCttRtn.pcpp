int CTipoRetornoContato::ListId( char* cidTipoRetornoContato ) 
{
    ULOG_START("CTipoRetornoContato::ListId()");
	//Variavel de controle para a quantidade de registros retornada
	int    iCont = 0;
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		char* cAuxidTipoRetornoContato = cidTipoRetornoContato; 
		struct
		{
			VARCHAR stidTipoRetornoContato[21+1];
			VARCHAR stnmTipoRetornoContato[255+1];
		} stTipoRetornoContatoRegistro;
		struct
		{
			short iidTipoRetornoContato;
			short inmTipoRetornoContato;
		} stTipoRetornoContatoIndicator;
	EXEC SQL END DECLARE SECTION;

	//Processamento Principal
	try
	{
		//Zera a estrutura da classe
		ZeraTipoRetornoContato();

		//Ativa as acoes decorrentes de erros ORACLE
		EXEC SQL WHENEVER NOT FOUND DO break;
		EXEC SQL WHENEVER SQLERROR GOTO GotoListId;
		sqlca.sqlcode=0;

		//Declara um cursor para listar os IDs
   		EXEC SQL DECLARE CursorTipoRetornoContatoId CURSOR FOR 
   		SELECT 	idTipoRetornoContato,
	nmTipoRetornoContato
		FROM contatoadm.TipoRetornoContato
		WHERE idTipoRetornoContato = :cAuxidTipoRetornoContato;

		//Abre o cursor
		EXEC SQL OPEN CursorTipoRetornoContatoId;

		//Verifica se nao house erro ORACLE
		if(sqlca.sqlcode)
		{
		   ULOG_END("CTipoRetornoContato::ListId()");
			return 0;//Erro
		}
		else
		{
			//Caso inexista registros sair do loop
			EXEC SQL WHENEVER NOT FOUND DO break;
			for(;;)
			{
				//Zera a estrutura de restorno
				memset( &stTipoRetornoContatoRegistro, 0, sizeof(stTipoRetornoContatoRegistro) );
				//Pega um registro no CURSOR
				EXEC SQL FETCH CursorTipoRetornoContatoId INTO :stTipoRetornoContatoRegistro:stTipoRetornoContatoIndicator;
				//Adiciona a classe
				Add( 	(char*)stTipoRetornoContatoRegistro.stidTipoRetornoContato.arr,
				(char*)stTipoRetornoContatoRegistro.stnmTipoRetornoContato.arr );
				//conta quantos existem
				iCont++;
			}
			//Fecha o CURSOR
			EXEC SQL CLOSE CursorTipoRetornoContatoId;
		}
		ULOG_END("CTipoRetornoContato::ListId()");
		//Retorna a quantidade de registros
		return iCont;
	}
	catch(...)
	{
		throw;
	}

GotoListId:
    ULOGE( "ERRO ORACLE:sqlcode = [%d],sqlerrmc = [%.70s]",sqlca.sqlcode,sqlca.sqlerrm.sqlerrmc);
	throw TuxBasicOraException(sqlca.sqlcode);

}

