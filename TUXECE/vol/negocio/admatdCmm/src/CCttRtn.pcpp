int CTipoRetornoContato::Insert( 
			char* cnmTipoRetornoContato,
			char* cidUsuarioAlteracao )
{
    ULOG_START("CTipoRetornoContato::Insert()");
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		VARCHAR cAuxidTipoRetornoContato[255+1];
		char* cAuxnmTipoRetornoContato = cnmTipoRetornoContato;
		char* cAuxidUsuarioAlteracao = cidUsuarioAlteracao;
	EXEC SQL END DECLARE SECTION;
	
	//Processamento Principal
	try
	{
		//Zera a estrutura da classe
		ZeraTipoRetornoContato();
		
		memset( &cAuxidTipoRetornoContato, 0, sizeof(cAuxidTipoRetornoContato) ); 
		
		EXEC SQL WHENEVER NOT FOUND CONTINUE;
		EXEC SQL WHENEVER SQLERROR GOTO GotoInsert;
		
		//Pega um id unico e sequencia para a insercao
		EXEC SQL SELECT contatoadm.TipoRetornoContatoSQ.NEXTVAL INTO :cAuxidTipoRetornoContato FROM DUAL;

		//Realiza o insert
		EXEC SQL INSERT INTO contatoadm.TipoRetornoContato
		(	idTipoRetornoContato,
			nmTipoRetornoContato,
			idUsuarioAlteracao,
			dtUltimaAlteracao) 
		VALUES 
		(	:cAuxidTipoRetornoContato,
			:cAuxnmTipoRetornoContato,
			:cAuxidUsuarioAlteracao,
			SYSDATE);
			
        ULOG_END("CTipoRetornoContato::Insert()");
		//Verifica se houve ou nao erro ORACLE
		if(sqlca.sqlcode) {
			return 0;//Erro
		}
		else {
			return 1;//Sucesso
		}
	}
	catch(...)
	{
		throw;
	}
	
GotoInsert:
    ULOGE( "ERRO ORACLE:sqlcode = [%d],sqlerrmc = [%.70s]",sqlca.sqlcode,sqlca.sqlerrm.sqlerrmc);
	throw TuxBasicOraException(sqlca.sqlcode);
	
}

int CTipoRetornoContato::Update( 
			char* cidTipoRetornoContato,
			char* cnmTipoRetornoContato,
			char* cidUsuarioAlteracao )
{
    ULOG_START("CTipoRetornoContato::Update()");
	//Variavel de status do oracle para PROC
	struct sqlca sqlca;
	//Declaracao das variaveis para o PROC
	EXEC SQL BEGIN DECLARE SECTION;
		
			char* cAuxidTipoRetornoContato = cidTipoRetornoContato;
			char* cAuxnmTipoRetornoContato = cnmTipoRetornoContato;
			char* cAuxidUsuarioAlteracao = cidUsuarioAlteracao;
	EXEC SQL END DECLARE SECTION;

	//Processamento Principal
	try
	{
		//Zera a estrutura da classe
		ZeraTipoRetornoContato();
		
		//Ativa as acoes decorrentes de erros ORACLE
		EXEC SQL WHENEVER NOT FOUND CONTINUE;
		EXEC SQL WHENEVER SQLERROR GOTO GotoUpdate;
		
		//Executa a instrucao de update
		EXEC SQL 
		UPDATE contatoadm.TipoRetornoContato
		SET 	nmTipoRetornoContato = :cAuxnmTipoRetornoContato,
		idUsuarioAlteracao = :cAuxidUsuarioAlteracao,
		dtUltimaAlteracao = SYSDATE
		WHERE 	idTipoRetornoContato = :cAuxidTipoRetornoContato;   
		ULOG_END("CTipoRetornoContato::Update()");
		//Verifica se houve ou nao erro ORACLE
		if(sqlca.sqlcode)
			return 0;//Erro
		else
			return sqlca.sqlerrd[2];//Quantidade de linhas afetadas
	}
	catch(...)
	{
		throw;
	}

GotoUpdate:
    ULOGE( "ERRO ORACLE:sqlcode = [%d],sqlerrmc = [%.70s]",sqlca.sqlcode,sqlca.sqlerrm.sqlerrmc);
	throw TuxBasicOraException(sqlca.sqlcode);
	
}

