bool CEnviarEmailProtocolo::EmailValido( char * email )
{
   int i;
   int k;
   int len;
   int len_invalid;
   int isValid;
   char invalidos[50];
   
   sprintf( invalidos, "%s", "\"\';:,<>[]{}/\\+=Á«&%$#()#!*„√·¡È…ÌÕÛ”˙⁄‡¡Ù‘Í | " );
   
   len = strlen( email );
   len_invalid = strlen(invalidos);
   
   if ( len < 5 )  /* ".com" -> por isso da comparacao menor que 5, um email assim eh invalido */
   {
       return false;
   }
   
   if ( !strcmp( email, "www.") )
   {
       return false;
   }
   
   if ( !strcmp( email, "WWW.") )
   {
       return false;
   }

   for ( isValid = i = 0; i < len; i++ )
   {
      for ( k = 0; k < len_invalid ; k++ )
      {
          if ( email[i] == invalidos[k] )
          {
             return false;
          }
      }
      if ( email[i] == '@' )
      {
          isValid++;
      }

   }
   
   if ( isValid > 0 )
      return true;
   else
      return false;
}



