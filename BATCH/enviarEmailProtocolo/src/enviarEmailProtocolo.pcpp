        }

        EXEC SQL COMMIT;
    }

    AtualizaEstadoProcesso( idControleFilaSMS, "9" );   // Ajusta coluna DTFIMCONSUMO com timestamp final
    

	if ( atoi((char*)PlanoB.arr) == 1 ) 
