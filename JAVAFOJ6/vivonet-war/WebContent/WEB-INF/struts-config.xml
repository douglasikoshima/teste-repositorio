<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
              "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
              "struts-config_1_2.dtd">
<struts-config>
    <form-beans>
        <form-bean name="formInicio" type="com.indracompany.actions.Controller$FormInicio" />
        <form-bean name="formSwitcher" type="com.indracompany.actions.Controller$formSwitcher" />
    </form-beans>
    <global-exceptions>
        <!-- sample exception handler <exception key="expired.password" type="app.ExpiredPasswordException" path="/changePassword.jsp"/>
            end sample -->
    </global-exceptions>
    <global-forwards>
        <!-- forward name="welcome" path="/Welcome.do"/ -->
    </global-forwards>
    <action-mappings>
        <action path="/valorSenha" parameter="valorSenha" type="com.indracompany.actions.Controller" scope="request">
            <forward path="/valorSenha.jsp" name="success" />
        </action> 	
        <action path="/begin" parameter="begin" type="com.indracompany.actions.Controller" scope="request" name="formInicio">
            <forward path="/login.jsp" name="login" />
            <forward path="/error.jsp" name="error" />
        </action>
        <action path="/about" parameter="about" scope="request" type="com.indracompany.actions.Controller">
            <forward path="/about.jsp" name="success" />
        </action>
        <action path="/autenticado" parameter="autenticado" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/redirectCarregaPerfil.jsp" name="index" />
            <forward path="/inicio.jsp" name="inicio" />
            <forward path="/acessoNegado.jsp" name="acessoNegado" />
            <forward path="/error.jsp" name="error" />
            <forward path="/carregandoPerfil.jsp" name="carregandoPerfil" />
            <forward path="/retorna.do" name="retorna" />
        </action>
        <action path="/autenticador" parameter="autenticador" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/index_token_full.jsp" name="token" />
        </action>
        <action path="/consultaLinha" parameter="consultaLinha" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/index.jsp" name="inicio" />
            <forward path="/login.jsp" name="login" />
            <forward path="/mensagem.jsp" name="erro" />
        </action>
        <action path="/generateToken" parameter="generateToken" scope="request" type="com.indracompany.actions.Controller" />
        <action path="/login" parameter="login" input="/login.jsp" scope="request" type="com.indracompany.actions.Controller" name="formInicio" />
        <action path="/logout" parameter="logout" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/restart.do" name="success" />
        </action>
        <action path="/meuCliente" parameter="meuCliente" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/index.jsp" name="success" />
            <forward path="/index_token.jsp" name="token" />
            <forward path="/login_erro.jsp" name="erro" />
        </action>
        <action path="/restart" parameter="restart" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/login.jsp" name="success" />
        </action>
        <action path="/retorna" parameter="retorna" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/error.jsp" name="error" />
            <forward path="/login.jsp" name="login" />
        </action>
        <action path="/submitToSwitcher" parameter="submitToSwitcher" scope="request" type="com.indracompany.actions.Controller" name="formSwitcher">
            <forward path="/index.jsp" name="success" />
            <forward path="/acessoNegado.jsp" name="acessoNegado" />
            <forward path="/session.jsp" name="session" />
        </action>
        <action path="/voltar" parameter="voltar" scope="request" type="com.indracompany.actions.Controller" name="formInicio">
            <forward path="/error.jsp" name="error" />
            <forward path="/index.jsp" name="success" />
        </action>
    </action-mappings>
    <controller nocache="true" processorClass="com.indracompany.struts.annotations.RequestProcessor" />
    <!-- <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/> -->
    <message-resources parameter="com/indracompany/actions/ApplicationResource" />
    <!-- plug-in className="org.apache.struts.tiles.TilesPlugin"> <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"
        /> <set-property property="moduleAware" value="true" /> </plug-in -->
    <!-- ========================= Validator plugin ================================= -->
    <!--plug-in className="org.apache.struts.validator.ValidatorPlugIn"> <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"
        /> </plug-in -->
</struts-config>