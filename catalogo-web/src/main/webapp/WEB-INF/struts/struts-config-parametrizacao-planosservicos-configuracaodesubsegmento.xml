<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
          
<struts-config>
	<data-sources/>
	
	<form-beans>
		<form-bean name="segmentoPlanoServicoForm" type="br.com.vivo.catalogoPRS.pageflows.shared.form.SegmentoPlanoServicoForm"/>
	</form-beans>

	<global-forwards/>
	
	<action-mappings>
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/SegmentoPlanoServicoAction" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="begin" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoplano.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/openPageMovel" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="openPageMovel" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoplano.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/openPageFixa" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="openPageFixa" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoservicofixa.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/searchPlano" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="searchPlano" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoplano.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/savePlanoSegmento" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="savePlanoSegmento" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoplano.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/disassociatePlanoSegmento" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="disassociatePlanoSegmento" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoplano.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/changePage" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="changePage" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoplano.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/searchServicoFixa" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="searchServicoFixa" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoservicofixa.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/saveServicoSegmento" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="saveServicoSegmento" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoservicofixa.jsp"/>
		</action>
		
		<action path="/br/com/vivo/catalogoPRS/pageflows/param/planoServico/configuracaosubsegmento/disassociateServicoSegmento" name="segmentoPlanoServicoForm"
			type="br.com.vivo.catalogoPRS.pageflows.param.planoServico.configuracaosubsegmento.SegmentoPlanoServicoAction" parameter="disassociateServicoSegmento" scope="request" validate="false">
		 <forward name="success" path="/WEB-INF/pages/segmentoplanoservico/segmentoservicofixa.jsp"/>
		</action>
	</action-mappings>
	
	<message-resources key="messages" parameter="catalogoprs_messages" null="false"/>
	
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/struts/validator-rules.xml, /WEB-INF/struts/validation.xml" />
	</plug-in>
</struts-config>